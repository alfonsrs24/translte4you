<h1 class="smalle-fonte">Sign In</h1>
<%= form_with url: sign_in_path do |form| %>
<div class="mb-2">
  <%= form.label :email %>
  <%= form.text_field :email, class: "form-control", placeholder: "name@email.com" %>
</div>
<div class="mb-2">
  <%= form.label :password %>
  <%= form.password_field :password, class: "form-control", placeholder: "password" %>
</div>
<div class="mb-2">
  <%= form.submit "Sign In", class: "btn btn-primary" %>
</div>
<% end %>

